{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Start Node Backend",
      "program": "${workspaceFolder}/backend/server.js"
    },
    {
      "name": "React Frontend (npm start)",
      "type": "node-terminal",
      "request": "launch",
      "command": "npm start",
      "cwd": "${workspaceFolder}/frontend"
    },
    {
      "name": "Open React in Chrome",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}/frontend/src"
    }
  ],
  "compounds": [
    {
      "name": "Start Full Stack (Backend + Frontend + Browser)",
      "configurations": [
        "Start Node Backend",
        "React Frontend (npm start)",
        "Open React in Chrome"
      ]
    }
  ]
}
